<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 텍스트 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년! 새해 복 많이 받으세요!!"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#0E0E0E"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 내용 -->
        <TextView
            android:id="@+id/tvContentPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리 호두도 올해로 5살이 됐어요 새해 아침부터 터그놀이 하는 중.. 호두랑 놀아주..."
            android:textSize="12sp"
            android:textColor="#616161"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <!-- 닉네임, 견종, 올린 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- 닉네임 -->
            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="10sp"
                android:textColor="#0E0E0E"
                android:layout_marginEnd="8dp" />

            <!-- 견종 -->
            <TextView
                android:id="@+id/tvDogBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포메라니안"
                android:textSize="10sp"
                android:textColor="#9E9E9E"
                android:layout_marginEnd="8dp" />

            <!-- 올린 시간 -->
            <TextView
                android:id="@+id/tvPostTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1시간 전"
                android:textSize="10sp"
                android:textColor="#9E9E9E" />
        </LinearLayout>
    </LinearLayout>

    <!-- 썸네일 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_thumbnail"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sample_thumbnail" />

        <!-- 좋아요와 댓글 수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- 좋아요 -->
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:text="6"
                android:textColor="#9E9E9E"
                android:textSize="10sp" />

            <!-- 댓글 -->
            <ImageView
                android:id="@+id/ivComment"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_comment" /> <!-- 좋아요와 댓글 간격 줄임 -->

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="1"
                android:textColor="#9E9E9E"
                android:textSize="10sp" /> <!-- 간격 조정 -->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
